@using Mandatory1.ViewModels
@model CipherModel
<div class="row">
    <div class="col-lg-12">
        <h2>The Shift Cipher</h2>
        <p>Use the Input field on the left to provide text to encrypt or decrypt. Enter the shift amount. The field on the right will show the results. Using english alphabet with standar symbols and numbers</p>
    </div>
@using (Html.BeginForm("Shift", "Home", FormMethod.Post, new { @id = "cipherForm" }))
{
    <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">

        <div class="col-lg-12">
            <h4>Input Text:</h4>

                @Html.ValidationMessageFor(x => x.input)
                @Html.TextAreaFor(x => x.input, new { @rows = "12", @cols = "99" })
            
        </div>
    </div>
    <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12">
        <div class="col-lg-12"><h4>Output Text:</h4>
            <textarea cols="99" rows="12" id="output" name="output">
                @{
                    if (ViewBag.m != null)
                    {
                        @ViewBag.m.Output
                    }
                }
            </textarea>
        </div>
    </div>

    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">

        <div class="col-lg-12 col-md-12, col-sm-12 col-xs-12">
            <h4>Shift Amount</h4>
            @Html.ValidationMessageFor(x => x.secret)
            <p>
            @Html.EditorFor(x => x.secret, new { htmlAttributes =  new { @type = "number" } })
            </p>
        </div>
        
            <div class="col-lg-12 col-md-12, col-sm-6 col-xs-6"><p>
    <a class="btn btn-primary btn-lg" href="#" onclick="$('#cipherForm').append('<input type=\'hidden\' name=\'type\' value=\'enc\'\'>').submit();">Encrypt</a>
</p>
            </div>
            <div class="col-lg-12 col-md-12, col-sm-6 col-xs-6">
                <p>
                    <a class="btn btn-primary btn-lg" href="#" onclick="$('#cipherForm').append('<input type=\'hidden\' name=\'type\' value=\'dec\'\'>').submit();">Decrypt</a>
                </p>
            </div>
        </div>
                    }
</div>
